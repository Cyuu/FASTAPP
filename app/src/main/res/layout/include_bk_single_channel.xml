<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin10"
    android:layout_marginTop="@dimen/margin10"
    android:layout_marginRight="@dimen/margin10"
    android:background="@drawable/bg_corner_white"
    android:orientation="vertical"
    android:padding="@dimen/margin5">

    <LinearLayout
        android:id="@+id/layout_time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin5">

        <TextView
            style="@style/tv_style_device"
            android:text="开始时间" />

        <TextView
            android:id="@+id/tv_begin_time"
            style="@style/edit_pulldown"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edittext_4tv" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin5">

        <TextView
            style="@style/tv_style_device"
            android:text="结束时间" />

        <TextView
            android:id="@+id/tv_end_time"
            style="@style/edit_pulldown"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edittext_4tv" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin5">

        <TextView
            android:id="@+id/btn_show_placback"
            style="@style/btn_style_common"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_weight="1"
            android:padding="@dimen/margin10"
            android:text="回放" />

        <TextView
            android:id="@+id/btn_stop_placback"
            style="@style/btn_style_cancel"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_weight="1"
            android:padding="@dimen/margin10"
            android:text="停止回放" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginBottom="@dimen/margin10"
        android:orientation="horizontal"
        android:padding="@dimen/margin5">

        <TextView
            android:id="@+id/btn_show_preview"
            style="@style/btn_style_common"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginTop="@dimen/margin3"
            android:layout_marginRight="@dimen/margin5"
            android:layout_weight="1"
            android:padding="@dimen/margin10"
            android:text="预览" />

        <TextView
            android:id="@+id/btn_stop_preview"
            style="@style/btn_style_cancel"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginTop="@dimen/margin3"
            android:layout_marginRight="@dimen/margin5"
            android:layout_weight="1"
            android:padding="@dimen/margin10"
            android:text="停止预览" />

    </LinearLayout>

</LinearLayout>
